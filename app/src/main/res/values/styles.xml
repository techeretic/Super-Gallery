<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- Application theme. DARK  ******************************************* -->
    <style name="AppBaseThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        <item name="cardColor">@color/dark_gray</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="backgroundcolor">@color/background_material_dark</item>
        <item name="fab_color">@color/primary_dark_material_dark</item>
        <item name="eTextColor">@color/abc_primary_text_material_dark</item>
        <item name="hTextColor">@color/dark_gray</item>
    </style>
    <style name="AppThemeDark" parent="AppBaseThemeDark">
    </style>

